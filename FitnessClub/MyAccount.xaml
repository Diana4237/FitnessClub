<Window x:Class="FitnessClub.MyAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="MyAccount" Height="650" Width="800">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>
    <DockPanel Width="Auto">
        
        <StackPanel Name="Menustack" DockPanel.Dock="Top"></StackPanel>
        
        <StackPanel Name="grand" DockPanel.Dock="Top" >
            <Border BorderThickness="2" BorderBrush="Red" Width="100" Height="150" HorizontalAlignment="Left" Margin="20">
            <Image x:Name="imgAcc" />
            </Border>
            <Button />
            <TextBlock x:Name="fio"></TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
