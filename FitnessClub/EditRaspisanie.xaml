<Window x:Class="FitnessClub.EditRaspisanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="EditRaspisanie" Height="500" Width="500">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="Padding" Value="30,10,30,10"></Setter>
            <Setter Property="Width" Value="150"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel  Name="dock">
        <DockPanel.Background>
            <ImageBrush ImageSource="images/rasp2.jpg" Stretch="UniformToFill" Opacity="0.9"></ImageBrush>
        </DockPanel.Background>
        <StackPanel Background="black"  Name="stack" Orientation="Vertical" VerticalAlignment="Center" Margin="20" >

            <ListBox Name="list" Margin="20" />
            <ListBox Name="list2" Visibility="Collapsed" Margin="20"/>
            <Button Content="Edit" Click="EditButton"/>
            <!--<Calendar  Name="calend"/>
            <Label Content="Hour"/>
            <TextBox />
            <Label Content="Minute"/>

            <TextBox />
            <Button Click="EditButton" Content="Изменить" Margin="30"/>-->
          
        </StackPanel>
    </DockPanel>
    </Window>