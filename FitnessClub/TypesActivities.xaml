                        <Rectangle Height="200" MinWidth="768" >
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="images\Cardio.JPG" ></ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Margin="52,73,52,73" Foreground="White" FontSize="35" FontWeight="Bold">Cardio Training</TextBlock>

